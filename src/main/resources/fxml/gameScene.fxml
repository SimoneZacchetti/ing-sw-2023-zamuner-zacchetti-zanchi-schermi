<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<FlowPane xmlns:fx="http://javafx.com/fxml/1" fx:id="mainPane" styleClass="mainPane"
          xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="it.polimi.ingsw.view.gui.GameSceneController">

    <stylesheets>
        <URL value="@../css/game.css"/>
    </stylesheets>

    <StackPane fx:id="gameStackPaneArea" styleClass="gameStackPaneArea">

        <HBox fx:id="boardShelfHBoxArea" styleClass="boardShelfHBoxArea">

            <VBox fx:id="boardCommonGoalCardsVBoxArea" styleClass="boardCommonGoalCardsVBoxArea">

                <StackPane fx:id="boardStackPaneArea" styleClass="boardStackPaneArea">
                    <ImageView fx:id="boardImage" fitHeight="656.0" fitWidth="656.0" styleClass="boardImage">
                        <image>
                            <Image url="@../img/board_shelf/livingroom.png"/>
                        </image>
                    </ImageView>
                    <GridPane fx:id="boardGridPane" hgap="6.0" maxHeight="592.0" maxWidth="592.0"
                              styleClass="boardGridPane" translateX="-2.0" vgap="6.0" StackPane.alignment="CENTER">
                        <ImageView fx:id="transparentImage1" fitHeight="60.0" fitWidth="60.0" styleClass="transparent"
                                   GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <ImageView fx:id="transparentImage2" fitHeight="60.0" fitWidth="60.0" styleClass="transparent"
                                   GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                        <ImageView fx:id="transparentImage3" fitHeight="60.0" fitWidth="60.0" styleClass="transparent"
                                   GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                        <!--                        <ImageView fx:id="cat1" id="Cat-1" fitHeight="60.0" fitWidth="60.0"-->
                        <!--                                   GridPane.columnIndex="4" GridPane.rowIndex="4"/>-->

                    </GridPane>
                    <ImageView fx:id="endGameTokenImage" fitHeight="72.0" fitWidth="72.0" rotate="9.0"
                               styleClass="endGameTokenImage" translateX="236.0" translateY="162.0"/>
                </StackPane>

                <HBox fx:id="commonGoalCardsHBoxArea" styleClass="commonGoalCardsHBoxArea">
                    <StackPane fx:id="commonGoalCard1StackPane">
                        <ImageView fx:id="scoring81" fitHeight="39.5" fitWidth="39.5" rotate="-8.0"
                                   styleClass="scoring-8" translateX="32.2" translateY="-3.5"/>
                    </StackPane>
                    <StackPane fx:id="commonGoalCard2StackPane">
                        <ImageView fx:id="scoring82" fitHeight="39.5" fitWidth="39.5" rotate="-8.0"
                                   styleClass="scoring-8" translateX="32.2" translateY="-3.5"/>
                    </StackPane>
                </HBox>

            </VBox>

            <VBox fx:id="shelfLimboVBoxArea" maxHeight="656.0" maxWidth="400.0" styleClass="shelfLimboVBoxArea">
                <HBox fx:id="limboHBoxArea" prefHeight="100.0" prefWidth="300.0" styleClass="limboHBoxArea">
                </HBox>

                <AnchorPane fx:id="columnArrowAnchorPane" maxWidth="310" prefHeight="50"
                            styleClass="columnArrowAnchorPane">
                    <ImageView id="arrowShelf" fx:id="arrowShelf1" fitHeight="30" fitWidth="30" layoutX="57.0"
                               layoutY="40.0" styleClass="button"/>
                    <ImageView id="arrowShelf" fx:id="arrowShelf2" fitHeight="30" fitWidth="30" layoutX="120.0"
                               layoutY="40.0" styleClass="button"/>
                    <ImageView id="arrowShelf" fx:id="arrowShelf3" fitHeight="30" fitWidth="30" layoutX="183.0"
                               layoutY="40.0" styleClass="button"/>
                    <ImageView id="arrowShelf" fx:id="arrowShelf4" fitHeight="30" fitWidth="30" layoutX="246.0"
                               layoutY="40.0" styleClass="button"/>
                    <ImageView id="arrowShelf" fx:id="arrowShelf5" fitHeight="30" fitWidth="30" layoutX="309.0"
                               layoutY="40.0" styleClass="button"/>
                </AnchorPane>

                <ScrollPane prefHeight="420.0" prefWidth="400.0" styleClass="shelfScrollPane"> <!-- Aggiungere ID -->
                    <HBox fx:id="shelfHBoxImages" styleClass="shelfHBoxImages">
                        <StackPane>
                            <ImageView fx:id="shelf1" fitHeight="400.0" fitWidth="400.0" styleClass="shelf"/>
                            <Label fx:id="shelfLabel1" styleClass="shelfLabel" StackPane.alignment="BOTTOM_CENTER"/>
                            <GridPane fx:id="shelf1GridPane" hgap="17.0" maxHeight="324.0" maxWidth="304.0"
                                      styleClass="shelfGridPane" translateY="-11.0" vgap="9.0">
                            </GridPane>
                        </StackPane>

                        <StackPane>
                            <ImageView fx:id="shelf2" fitHeight="400.0" fitWidth="400.0" styleClass="shelf"/>
                            <Label fx:id="shelfLabel2" styleClass="shelfLabel" StackPane.alignment="BOTTOM_CENTER"/>
                            <GridPane fx:id="shelf2GridPane" hgap="17.0" maxHeight="324.0" maxWidth="304.0"
                                      styleClass="shelfGridPane" translateY="-11.0" vgap="9.0">

                            </GridPane>
                        </StackPane>

                        <StackPane>
                            <ImageView fx:id="shelf3" fitHeight="400.0" fitWidth="400.0" styleClass="shelf"/>
                            <Label fx:id="shelfLabel3" styleClass="shelfLabel" StackPane.alignment="BOTTOM_CENTER"/>
                            <GridPane fx:id="shelf3GridPane" hgap="17.0" maxHeight="324.0" maxWidth="304.0"
                                      styleClass="shelfGridPane" translateY="-11.0" vgap="9.0">

                            </GridPane>
                        </StackPane>

                        <StackPane>
                            <ImageView fx:id="shelf4" fitHeight="400.0" fitWidth="400.0" styleClass="shelf"/>
                            <Label fx:id="shelfLabel4" styleClass="shelfLabel" StackPane.alignment="BOTTOM_CENTER"/>
                            <GridPane fx:id="shelf4GridPane" hgap="17.0" maxHeight="324.0" maxWidth="304.0"
                                      styleClass="shelfGridPane" translateY="-11.0" vgap="9.0">

                            </GridPane>
                        </StackPane>

                    </HBox>
                </ScrollPane>
            </VBox>

            <StackPane fx:id="personalGoalCardPane" styleClass="personalGoalCardPane">
            </StackPane>

        </HBox>

        <Pane fx:id="playersInfoPaneArea" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="169.0"
              prefWidth="133.0" styleClass="playersNamePaneArea" translateX="580.0" translateY="-280.0">
            <VBox fx:id="playersInfoVBox">
            </VBox>
        </Pane>

        <FlowPane fx:id="commonGoalCardInfoPanel" styleClass="commonGoalCardInfoPanel"/>

    </StackPane>
</FlowPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<FlowPane fx:id="mainPane" styleClass="mainPane" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.view.gui.GameSceneController">

    <stylesheets>
        <URL value="@../css/game.css" />
    </stylesheets>

    <StackPane fx:id="boardArea" styleClass="boardArea">

        <HBox fx:id="boardShelf" StackPane.alignment="CENTER">
            <ImageView fx:id="board" fitHeight="656.0" fitWidth="656.0" styleClass="board" StackPane.alignment="TOP_LEFT" />
            <ImageView fx:id="shelf" fitHeight="400.0" fitWidth="400.0" styleClass="shelf" StackPane.alignment="TOP_RIGHT" />
        </HBox>


    </StackPane>
</FlowPane>

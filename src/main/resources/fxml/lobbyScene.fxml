<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<?import javafx.scene.image.ImageView?>

<BorderPane fx:controller="it.polimi.ingsw.view.gui.LobbySceneController"
            fx:id="mainPane"
            styleClass="mainPane"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml">

    <stylesheets>
        <URL value="@../css/menu.css"/>
    </stylesheets>

    <top>
        <VBox styleClass="topBox">
            <Label text="Lobby" styleClass="menuTitle"/>
        </VBox>
    </top>

    <center>
        <VBox styleClass="usernameBox">
            <VBox fx:id="lobbyLabelsBox" styleClass="lobbyInnerBox">
            </VBox>
        </VBox>
    </center>

    <bottom>
        <HBox styleClass="botBox">
            <ImageView fx:id="backButton" id="backButton" fitWidth="400" fitHeight="400" preserveRatio="true" pickOnBounds="true" styleClass="button"/>
            <Region prefWidth="20" />
            <ImageView fx:id="exitButton" id="exitButton" fitWidth="400" fitHeight="400" preserveRatio="true" pickOnBounds="true" styleClass="button"/>
        </HBox>
    </bottom>
</BorderPane>
